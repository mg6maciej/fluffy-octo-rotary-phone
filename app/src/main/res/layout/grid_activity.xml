<?xml version="1.0" encoding="utf-8"?>
<pl.mg6.likeornot.view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/grid_pager_padding"
    android:paddingTop="@dimen/grid_pager_padding">

    <android.support.v4.view.ViewPager
        android:id="@+id/grid_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false" />

    <View
        android:id="@+id/grid_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000" />

</pl.mg6.likeornot.view.SquareFrameLayout>
