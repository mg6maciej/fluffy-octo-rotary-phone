<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/grid_pager_padding"
    android:paddingRight="@dimen/grid_pager_padding"
    android:visibility="gone"
    tools:showIn="@layout/grid_activity">

    <ImageView
        android:id="@+id/grid_overlay_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#9000"
        android:padding="16dp">

        <TextView
            android:id="@+id/grid_overlay_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/white"
            tools:text="Michael Jackson" />

    </FrameLayout>

</FrameLayout>
